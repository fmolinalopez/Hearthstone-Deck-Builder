{% extends 'layout.twig' %}

{% block content %}
    <div class="container">
        <h1>HEARTHSTONE DECK BUILDER</h1>
        <h2>Card Info:</h2>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Cost</th>
                <th>Type</th>
                <th>Attack</th>
                <th>Health</th>
                <th>Effect</th>
                <th>Edit Card</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img src="{{ card.image }}" alt="{{ card.name }} image"></td>
                    <td>{{ card.name }}</td>
                    <td>{{ card.cost }}</td>
                    <td>{{ card.type }}</td>
                    <td>{{ card.attack }}</td>
                    <td>{{ card.health }}</td>
                    <td>{{ card.effect }}</td>
                    <td><a href="{{ base_url }}/cards/edit/{{ card.id }}" class="editar">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}